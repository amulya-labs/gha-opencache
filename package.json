{
  "name": "gha-opencache",
  "version": "1.0.0",
  "description": "Drop-in replacement for actions/cache with local filesystem storage",
  "main": "dist/restore/index.js",
  "scripts": {
    "build": "tsc",
    "package": "npm run package:restore && npm run package:save && npm run package:restore-only && npm run package:save-only",
    "package:restore": "ncc build src/restore.ts -o dist/restore --license licenses.txt",
    "package:save": "ncc build src/save.ts -o dist/save --license licenses.txt",
    "package:restore-only": "ncc build src/restore-only.ts -o dist/restore-only --license licenses.txt",
    "package:save-only": "ncc build src/save-only.ts -o dist/save-only --license licenses.txt",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch",
    "test:s3": "jest __tests__/integration/s3.test.ts --testTimeout=60000",
    "lint": "eslint src __tests__",
    "lint:fix": "eslint src __tests__ --fix",
    "format": "prettier --write 'src/**/*.ts' '__tests__/**/*.ts'",
    "format:check": "prettier --check 'src/**/*.ts' '__tests__/**/*.ts'",
    "all": "npm run build && npm run lint && npm run format:check && npm run test && npm run package"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/amulya-labs/gha-opencache.git"
  },
  "keywords": [
    "github-actions",
    "cache",
    "local-cache"
  ],
  "author": "Amulya Labs",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/amulya-labs/gha-opencache/issues"
  },
  "homepage": "https://github.com/amulya-labs/gha-opencache#readme",
  "dependencies": {
    "@actions/core": "^2.0.3",
    "@actions/exec": "^2.0.0",
    "@actions/glob": "^0.5.1",
    "@actions/io": "^2.0.0",
    "@aws-sdk/client-s3": "^3.990.0",
    "@aws-sdk/lib-storage": "^3.990.0",
    "@google-cloud/storage": "^7.19.0",
    "proper-lockfile": "^4.1.2"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.15.0",
    "@types/proper-lockfile": "^4.1.4",
    "@vercel/ncc": "^0.38.4",
    "eslint": "^9.24.0",
    "eslint-config-prettier": "^10.1.0",
    "globals": "^17.3.0",
    "jest": "^29.7.0",
    "prettier": "^3.5.0",
    "ts-jest": "^29.3.0",
    "typescript": "^5.8.0",
    "typescript-eslint": "^8.55.0"
  },
  "engines": {
    "node": "^20.9.0 || >=22.0.0"
  }
}
